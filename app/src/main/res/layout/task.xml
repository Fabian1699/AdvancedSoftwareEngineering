<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_task">

    <ProgressBar
        android:id="@+id/taskViewProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:progress="66"
        android:scaleY="100"
        android:progressTint="@color/grayLight"
        android:progressBackgroundTint="@color/yellow"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_subtask">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/taskViewCheck"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="300dp"
            android:layout_margin="20dp"
            android:text ="hallo"
            android:id="@+id/taskViewName"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>


    </LinearLayout>

</RelativeLayout>